<%= row do %>
  <%= form_tag session_path, {class: 'form-horizontal span6 offset3'} do %>
    <%= field_set_tag 'Login Credentials' do %>
      <div class="control-group">
        <label class="control-label">email</label>
        <div class="controls">
          <%= text_field_tag 'login', @login, class: 'span12' %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">password</label>
        <div class="controls">
          <%= password_field_tag 'password', nil, class: 'span12' %>
        </div>
      </div>
      <div class="form-actions align-right">
        <%= button_tag 'Login', class: 'btn btn-primary', type: 'submit' %>
      </div>
    <% end %>
  <% end %>
<% end %>

